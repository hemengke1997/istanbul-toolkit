{
  "name": "istanbul-toolkit",
  "version": "0.0.0",
  "private": true,
  "description": "istanbul toolkit",
  "type": "module",
  "keywords": [
    "istanbul",
    "istanbul-toolkit",
    "coverage",
    "nyc"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemengke1997/istanbul-toolkit.git"
  },
  "author": "hemengke <https://github.com/hemengke1997>",
  "scripts": {
    "dev": "turbo dev --filter=\"./packages/*\"",
    "build": "turbo build --filter=\"./packages/*\"",
    "lint": "turbo lint --filter=\"./packages/*\"",
    "prepare": "simple-git-hooks",
    "commitlint": "commitlint -e",
    "up": "taze -I -w",
    "changeset": "changeset",
    "version": "changeset version && changeset tag",
    "report": "nyc report --excludeAfterRemap=false"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.3.0",
    "@minko-fe/commitlint-config": "^2.0.7",
    "@minko-fe/eslint-config": "^2.2.2",
    "@minko-fe/prettier-config": "^2.2.0",
    "@minko-fe/tsconfig": "^2.0.8",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.57.0",
    "nyc": "^15.1.0",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.13.7",
    "tsup": "^8.0.2",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  },
  "simple-git-hooks": {
    "commit-msg": "npm run commitlint",
    "pre-commit": "npm run lint"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "patchedDependencies": {
      "vite-plugin-istanbul@6.0.0": "patches/vite-plugin-istanbul@6.0.0.patch"
    }
  }
}
